<h2>Create New Customer</h2>
<div id="clearance" class="sign-up">
      <%= render partial: '/users/form', object: @newUser %>
      <div class="other-links">
        <%= link_to t(".sign_up"), sign_up_url %>
      </div>
</div>


<h2>Customers</h2>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>Email</th>
    <th>Created-At</th>
    <th>View Info</th>
  </tr>
  </thead>
  <tbody>
  <% @customers.each do |c| %>
      <tr>
        <td>1</td>
        <td><%= c.email %></td>
        <td><%= c.created_at %></td>
        <td>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#user_modal_<%= c.id %>">View</button>
        </td>
      </tr>
  <% end %>

