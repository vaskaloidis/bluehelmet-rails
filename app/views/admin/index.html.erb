<h2>Customers</h2>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>Email</th>
    <th>Created-At</th>
    <th>View</th>
    <th>Edit</th>
  </tr>
  </thead>
  <tbody>
  <% @customers.each do |c| %>
      <tr>
        <td><%= c.email %></td>
        <td><%= c.created_at %></td>
        <td>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#user_modal_<%= c.id %>">View</button>
        </td>
        <td>
          <%= link_to "Edit", admin_view_customer_path(c), :class => "btn btn-primary" %>
        </td>
      </tr>
  <% end %>
  <!--<tr class="info">-->
  <!--<tr class="success">-->
  <!--<tr class="danger">-->
  <!--<tr class="warning">-->
  <!--<tr class="active">-->
  </tbody>
</table>
<% @customers.each do |c| %>
  <div class="modal fade" id="user_modal_<%= c.id %>" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="ion-ios-close-empty"></span>
          </button>
          <span class="pe-7s-volume services-icon-2"></span>
          <h4 class="service-title">Large Modal</h4>
        </div>
        <div class="modal-body">
          <h5 class="heading-1 modal-heading mb20">Customer Info</h5>
          <p>
            <%= c.role %><br>
            <%= c.firstName %>, <%= c.lastName %><br>
            <%= c.company %><br>
            <%= c.phone %><br>
          </p>
          <!--<h5 class="heading-1 modal-heading mb20"></h5>-->
          <!--<p></p>-->
          <!--<h5 class="heading-1 modal-heading mb20">Professionals</h5>-->
          <!--<p class="no-margin-bottom">"</p>-->
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>
<hr>

<hr>
<p id="notice"><%= notice %></p>
<hr>

<h1>Contact Messages</h1>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>Name</th>
    <th>Subject</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @contact_messages.each do |contact_message| %>
      <tr>
        <td><%= contact_message.name %></td>
        <td><%= contact_message.subject %></td>
        <td><%= contact_message.phone %></td>
        <td><%= contact_message.email %></td>
        <td><%= contact_message.content %></td>
        <td><%= link_to 'Show', contact_message %></td>
        <td><%= link_to 'Edit', edit_contact_message_path(contact_message) %></td>
        <td><%= link_to 'Destroy', contact_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

